# 開発用 Go (Alpine)
FROM golang:1.24-alpine

# ホットリロード用ツール air をインストール
RUN apk add --no-cache git \
 && go install github.com/air-verse/air@latest

WORKDIR /app

# モジュールだけ先にコピーしてキャッシュ
COPY go.mod go.sum ./
RUN go mod download

# ソースをコピー
COPY . ./

ARG PORT=8080
ENV PORT=$PORT
EXPOSE ${PORT}

# air: ファイル変更検知でリビルド＆再起動
CMD ["air", "-c", ".air.toml"]